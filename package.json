{
  "name": "hydro-cli",
  "version": "1.0.0",
  "description": "The Unified Development Environment Catalyst - Automate code analysis, refactoring, and quality improvements",
  "main": "dist/index.js",
  "bin": {
    "hydro": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json,md}",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "development-tools",
    "code-analysis",
    "refactoring",
    "technical-debt",
    "code-quality",
    "cli",
    "typescript",
    "automation"
  ],
  "author": "The Best Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kingjethro999/hydro.git"
  },
  "bugs": {
    "url": "https://github.com/kingjethro999/hydro/issues"
  },
  "homepage": "https://github.com/kingjethro999/hydro#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cosmiconfig": "^8.3.6",
    "crypto-js": "^4.2.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "listr2": "^7.0.2",
    "lodash": "^4.17.21",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.7",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.10",
    "@types/semver": "^7.5.4",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}